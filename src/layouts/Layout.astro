---
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="main">
			<slot />
		</main>
		<!-- This is where the content will be injected -->
	</body>
</html>

<style is:global>
	@font-face {
		font-family: "Norse";
		src: url("../../public/fonts/Norse.otf");
	}
	:root {
		/* ðŸŽ¨ Colores principales */
		--color-background: #0f172a; /* Fondo principal (dark navy) */
		--color-surface: #1e293b; /* Fondo de secciones / tarjetas */
		--color-surface-hover: #334155; /* Hover para tarjetas / botones */
		--color-border: #334155; /* Bordes / divisores */
		--color-shadow: rgba(0, 0, 0, 0.5); /* Sombras suaves */

		--color-text-primary: #f8fafc; /* Texto principal (blanco puro) */
		--color-text-secondary: #94a3b8; /* Texto secundario (gris azulado) */
		--color-text-muted: #64748b; /* Texto mÃ¡s sutil o inactivo */

		/* ðŸŽ¯ Colores de marca */
		--color-primary: #3b82f6; /* Azul principal (botones, enlaces) */
		--color-primary-hover: #2563eb; /* Hover azul mÃ¡s oscuro */
		--color-primary-active: #1d4ed8; /* Estado activo / pulsado */

		/* ðŸŒ¿ Colores de acento */
		--color-accent-green: #10b981; /* Verde menta (Ã©xito, CTA secundaria) */
		--color-accent-green-hover: #059669;
		--color-accent-purple: #a78bfa; /* PÃºrpura suave (para detalles creativos) */
		--color-accent-purple-hover: #8b5cf6;

		/* ðŸª„ Animaciones y transiciones */
		--transition-fast: 0.15s ease-in-out;
		--transition-medium: 0.3s ease-in-out;
		--transition-slow: 0.6s ease-in-out;
		--animation-fade-in: fadeIn 0.6s ease-out forwards;
		--animation-slide-up: slideUp 0.5s ease-out forwards;

		/* ðŸª¶ Radio y spacing */
		--radius-small: 0.5rem;
		--radius-medium: 1rem;
		--radius-large: 1.5rem;

		--spacing-xs: 0.5rem;
		--spacing-sm: 1rem;
		--spacing-md: 2rem;
		--spacing-lg: 4rem;
	}

	/* Ejemplo de animaciones */
	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	html {
		color-scheme: dark light;
		scroll-behavior: smooth;
		background-color: var(--color-background);
		color: white;
		font-family: "Norse";
	}
	.main {
		padding: 16px;
		background-color: var(--color-background);
		color: var(--color-text-primary);
		display: grid;
		grid-template-rows: repeat(12, 1fr);
		grid-template-columns: repeat(12, 1fr);
		min-height: 100vh;
		gap: 16px;
	}
</style>
