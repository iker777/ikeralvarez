---
import MainComponent from "./MainComponent.astro";
---

<nav class="nav">
    <div class="nav__burger">
        <img class="nav__arrow" src="/svg/arrow.svg" alt="" />
        <span class="nav__text">Atrás</span>
    </div>
    <div class="nav__content">
        <!-- La idea es hacer un menú de navegación que se abra y que sea el bento grid -->
        <MainComponent />
    </div>
</nav>
<script is:inline>
    const burger = document.querySelector(".nav__burger");
    const menu = document.querySelector(".nav__content");
    burger?.addEventListener("click", () => {
        menu?.classList.toggle("menu__active");
        setTimeout(() => (window.location = "/"), 1500);
    });
</script>
<style>
    .nav {
        position: fixed;
        z-index: 100;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        overflow: hidden;
        pointer-events: none;
    }
    @keyframes arrow-animation {
        0% {
            left: 50%;
            transform: scale(0.3);
        }
        75% {
            left: 0;
            transform: scale(1.2);
        }
        100% {
            transform: scale(1);
        }
    }
    .nav__burger {
        position: absolute;
        top: 0;
        left: 0;
        margin: 8px;
        padding: 8px;
        border-radius: 8px;
        z-index: 2;
        animation: arrow-animation 1.5s ease-in-out;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        pointer-events: all;
        backdrop-filter: blur(4px);
    }

    .nav__arrow {
        cursor: pointer;
        width: 40px;
        transform: rotate(45deg);
        transition: 0.5s transform ease;
        /* margin: 16px; */
    }
    .nav__arrow:hover {
        transform: scale(1.2) rotate(225deg);
    }
    @keyframes nav-text-animation {
        0% {
            color: transparent;
        }
        45% {
            color: transparent;
        }
        100% {
            color: white;
        }
    }
    .nav__text {
        font-family: "Norse";
        animation: nav-text-animation 3s;
        font-size: 16px;
        cursor: pointer;
    }
    .nav__content {
        position: absolute;
        backdrop-filter: blur(5px);
        width: 100%;
        min-height: 100vh;
        top: 0;
        left: -100%;
        z-index: 1;
        transition:
            left 1.5s ease-in-out,
            background-color 2.5s ease-out;
        pointer-events: all;
    }
    .menu__active {
        left: 0;
        background-color: var(--color-shadow);
    }
    @media (max-width: 1026px) {
        .nav__arrow {
            width: 28px;
        }
        .nav__text {
            font-size: 12px;
        }
    }
</style>
